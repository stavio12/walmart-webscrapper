<%- include('../partials/header')-%>

<div class="col-10">
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-8 col-md-6 col-lg-4 offset-sm-2 offset-md-3 offset-lg-4">
        <form action="/edit/<%= user.id  %>?_method=PUT" method="POST" class="mb-3 text-center">
          <%- include('../partials/messages')-%>

          <div class="form-group">
            <label for="email">Username:</label>
            <input type="text" name="username" class="form-control" id="email" value="<%= user.name%>" required />
          </div>

          <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" name="email" class="form-control" id="email" value="<%= user.email%>" required />
          </div>
          <input type="hidden" name="_method" value="PUT" />

          <button type="submit" class="btn btn-primary btn-block">Update User</button>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer')-%>
