<%- include('../partials/header') -%>

<div class="col-10">
  <%- include('../partials/messages') -%>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody>
      <% user.forEach((acc)=>{ %>
      <tr>
        <th scope="row"><%= acc.name %></th>
        <td><%= acc.email %></td>
        <td>
          <a href="/edit/<%= acc.id%>" class="btn btn-primary">Edit</a>
          <form action="/delete/<%= acc.id  %>?_method=DELETE" style="display: inline" method="POST">
            <input type="hidden" name="_method" value="DELETE" />
            <button type="submit" style="cursor: pointer" class="btn btn-danger">DELETE</button>
          </form>
        </td>
      </tr>

      <% })%>
    </tbody>
  </table>
</div>

<%- include('../partials/footer') -%>
